<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="0dp"
    android:paddingBottom="20dp"
    android:paddingHorizontal="40dp"
    >

    <TextView
        android:id="@+id/namabooking"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:textSize="22dp"
        android:textColor="@color/text"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/alamatbooking"
        android:layout_below="@id/namabooking"
        android:textColor="@color/text"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tanggamulai"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:textColor="@color/text"
        android:layout_below="@+id/alamatbooking"
        android:layout_marginTop="25dp" />



    <TextView
        android:id="@+id/tanggalakhir"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:textColor="@color/text"
        android:layout_below="@+id/alamatbooking"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@+id/tanggamulai" />

    <TextView
        android:id="@+id/hargabooking"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tanggamulai"
        android:textColor="@color/text"
        android:textSize="22dp"
        android:layout_marginTop="25dp" />

    <Button
        android:id="@+id/delete_button"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tanggalakhir"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="45dp"
        android:layout_toRightOf="@+id/hargabooking"
        android:backgroundTint="#E91E63"
        android:background="@drawable/shape"
        android:text="Remove" />

</RelativeLayout>